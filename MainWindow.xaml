<Window x:Class="MediaOrganizeViewer.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:core="clr-namespace:MediaViewer.Core.View;assembly=MediaViewer.Core"
        mc:Ignorable="d"
        Title="Media Organize Viewer" Height="700" Width="1000"
        AllowDrop="True"
        Drop="Window_Drop"
        DragOver="Window_DragOver">

    <Window.Resources>
        <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter"/>
    </Window.Resources>
    
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <Grid Grid.Row="0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="300"/>
                <ColumnDefinition Width="5"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

        <Grid Grid.Column="0" Background="#F3F3F3">
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="5"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <GroupBox Header="Destination (移動先)" Grid.Row="0" Margin="5">
                <TreeView x:Name="DestinationFolderTreeView"
                          ItemsSource="{Binding DestinationFolderTree.Items}"
                          SelectedItemChanged="FolderTreeView_SelectedItemChanged">
                    <TreeView.ItemContainerStyle>
                        <Style TargetType="TreeViewItem">
                            <Setter Property="IsExpanded" Value="{Binding IsExpanded, Mode=TwoWay}"/>
                            <Setter Property="IsSelected" Value="{Binding IsSelected, Mode=TwoWay}"/>
                        </Style>
                    </TreeView.ItemContainerStyle>
                    <TreeView.ItemTemplate>
                        <HierarchicalDataTemplate ItemsSource="{Binding Children}">
                            <TextBlock Text="{Binding DisplayName}"/>
                        </HierarchicalDataTemplate>
                    </TreeView.ItemTemplate>
                    <TreeView.ContextMenu>
                        <ContextMenu>
                            <MenuItem Header="新規フォルダ作成" Click="CreateFolder_Click"/>
                            <Separator/>
                            <MenuItem Header="F1に割り当て" Click="AssignShortcut_Click" Tag="F1"/>
                            <MenuItem Header="F2に割り当て" Click="AssignShortcut_Click" Tag="F2"/>
                            <MenuItem Header="F3に割り当て" Click="AssignShortcut_Click" Tag="F3"/>
                            <MenuItem Header="F4に割り当て" Click="AssignShortcut_Click" Tag="F4"/>
                            <MenuItem Header="F5に割り当て" Click="AssignShortcut_Click" Tag="F5"/>
                            <Separator/>
                            <MenuItem Header="ショートカット解除" Click="RemoveShortcut_Click"/>
                        </ContextMenu>
                    </TreeView.ContextMenu>
                </TreeView>
            </GroupBox>

            <GridSplitter Grid.Row="1" Height="5" HorizontalAlignment="Stretch" Background="#CCC"/>

            <GroupBox Header="Source (移動元)" Grid.Row="2" Margin="5">
                <TreeView x:Name="SourceFolderTreeView" ItemsSource="{Binding SourceFolderTree.Items}"
                          SelectedItemChanged="FolderTreeView_SelectedItemChanged">
                    <TreeView.ItemContainerStyle>
                        <Style TargetType="TreeViewItem">
                            <Setter Property="IsExpanded" Value="{Binding IsExpanded, Mode=TwoWay}"/>
                            <Setter Property="IsSelected" Value="{Binding IsSelected, Mode=TwoWay}"/>
                        </Style>
                    </TreeView.ItemContainerStyle>
                    <TreeView.ItemTemplate>
                        <HierarchicalDataTemplate ItemsSource="{Binding Children}">
                            <TextBlock Text="{Binding DisplayName}"/>
                        </HierarchicalDataTemplate>
                    </TreeView.ItemTemplate>
                </TreeView>
            </GroupBox>
        </Grid>

        <GridSplitter Grid.Column="1" Width="5" HorizontalAlignment="Stretch" Background="#CCC"/>

        <Border Grid.Column="2">
            <Border.Style>
                <Style TargetType="Border">
                    <Setter Property="Background" Value="Black"/>
                    <Style.Triggers>
                        <DataTrigger Binding="{Binding CurrentMedia}" Value="{x:Null}">
                            <Setter Property="Background" Value="#F5F5F5"/>
                        </DataTrigger>
                    </Style.Triggers>
                </Style>
            </Border.Style>
            <Grid>
                <core:MediaViewHost CurrentMedia="{Binding CurrentMedia}" />
                <ProgressBar VerticalAlignment="Bottom" Height="4" IsIndeterminate="True"
             Visibility="{Binding CurrentMedia.IsLoading,
                         Converter={StaticResource BooleanToVisibilityConverter},
                         FallbackValue=Collapsed, TargetNullValue=Collapsed}"/>
            </Grid>
        </Border>
        </Grid>

        <!-- ステータスバー -->
        <StatusBar Grid.Row="1" Background="#F0F0F0">
            <StatusBarItem>
                <TextBlock x:Name="StatusBarText" Text="{Binding StatusText}" />
            </StatusBarItem>
            <StatusBarItem HorizontalAlignment="Right">
                <Button Content="❌ 閉じる(ESC)" Click="UnloadMedia_Click" Padding="5,2"/>
            </StatusBarItem>
        </StatusBar>
    </Grid>
</Window>